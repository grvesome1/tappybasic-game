# ==== REQUIRED FOR DEPLOY ==== 
DEPLOYER_PRIVATE_KEY=
LINEA_SEPOLIA_RPC_URL=
LINEA_RPC_URL=
LINEASCAN_API_KEY=

# ==== OPTIONAL (RECOMMENDED) ==== 
# If set, deployment script transfers ownership/roles to this address at the end.
MULTISIG_ADDRESS=

# Ops wallet (can be multisig too)
OPS_WALLET_ADDRESS=

# Backend EIP-712 quote signer (address). If empty, deploy script uses deployer.
QUOTE_SIGNER_ADDRESS=

# Epoch publisher signer (address). If empty, deploy script uses deployer.
ORACLE_SIGNER_ADDRESS=

# mUSD address on the target chain.
# If empty, deploy script deploys MockERC20("Mock USD", "mUSD") and uses it.
MUSD_ADDRESS=

# Optional payment tokens to accept (non-mUSD tokens route to TreasuryVault).
# Example: TBAG / RUSTYAI buyback treasury flow.
TBAG_TOKEN_ADDRESS=
RUSTYAI_TOKEN_ADDRESS=

# Optional: accept the LINEA ERC20 token as a payment token.
# NOTE: On Linea, native gas is ETH; "LINEA" refers to the ERC20 token.
LINEA_TOKEN_ADDRESS=

# If you want pots separate from epoch vaults, set these.
# If empty, deploy script uses the deployed epoch vault addresses.
DAILY_POT_ADDRESS=
WEEKLY_POT_ADDRESS=

# ==== OPTIONAL (AUTOMATION) ==== 
# Private key used by scripts/epoch/publishEpoch.ts to sign + publish epochs.
ORACLE_PRIVATE_KEY=

# --- Treasury automation (auto-fund payout vaults) ---
# Hot key address that can ONLY swap configured assets -> mUSD and fund payout vaults.
TREASURY_KEEPER_ADDRESS=

# Private key used by scripts/treasury/ensureLiquidity.ts (recommended separate from deployer).
TREASURY_KEEPER_PRIVATE_KEY=

# --- DEX swap config (UniswapV3/PancakeV3 style) ---
SWAP_ROUTER_ADDRESS=
QUOTER_ADDRESS=
WETH_ADDRESS=

# Fee tiers (uint24) - YOU MUST CONFIRM THE POOLS EXIST ON YOUR DEX.
# Common values: 500 (0.05%), 3000 (0.3%), 10000 (1%).
V3_FEE_WETH_MUSD=3000
V3_FEE_LINEA_WETH=3000
# Optional direct LINEA/mUSD pool fee; if empty we route LINEA->WETH->mUSD.
V3_FEE_LINEA_MUSD=

# Optional caps for max input per swap call (raw wei/token units). 0/blank = no cap.
MAX_ETH_SWAP_IN=
MAX_LINEA_SWAP_IN=

# Swap runtime safety
SWAP_SLIPPAGE_BPS=300
SWAP_DEADLINE_SECONDS=900

# Path to a distribution JSON produced by scripts/epoch/buildMerkle.ts
EPOCH_DISTRIBUTION_JSON=
